<% include ../partials/header %>

<div class="container"> 
	<header class="jumbotron">
		<div class="container">
		<h1> Welcome to YelpCamp</h1>
		<p>	View our handpicked campgrounds from all over Malta	</p>
		<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
		</p>
		</div>
	</header>

	
	<div class="row text-center" id="campground-grid">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
					<div class="card">
					  <img class="card-img-top frontpage img-fluid" src="<%= campground.image %>" alt="<%= campground.image %>">
					  <div class="card-body">
						<h5 class="card-title"><%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					  </div>
					</div>
				</div>
		<% }); %>
	</div>

<% include ../partials/footer %>